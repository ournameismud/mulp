{
	"src": "./src",
	"public": "./tmp/public",
	"dist": "dist",

	"browserSync": {
		"server": {
			"baseDir": "tmp/public",
			"index": "index.html"
		}
	},

	"craftTemplates": {
		"src": "./deploy/craft/templates",
		"config": "./deploy",
		"dest": "./deploy"
	},

	"staticAssets": {
		"src": "static",
		"dest": "./desploy/static"
	},

	"twig": {
		"src": "templates",
		"dest": "./deploy/fractal"
	},

	"js": {
		"src": "js",
		"dest": "dist/js",
		"libs": [
			"./node_modules/jquery/dist/jquery.min.js",
			"./node_modules/picturefill/dist/picturefill.min.js"
		]
	},

	"serviceWorker": {
		"src": "js",
		"dest": "./"
	},

	"inline": {
		"src": [
			"./node_modules/fg-loadjs/loadJS.js",
			"./node_modules/fg-loadcss/src/loadCSS.js",
			"./node_modules/fg-loadcss/src/cssrelpreload.js"
		],
		"output": "_layout.twig",
		"path": "./src/templates/wrapper/"
	},

	"json": {
		"src": "js/json",
		"dest": "./"
	},

	"scss": {
		"src": "scss",
		"dest": "dist/css",
		"inlineSVG": "images/svg-assets",
		"components": "templates/**/**/**/*.scss"
	},

	"cssFonts": {
		"src": "scss",
		"dest": "dist/css"
	},

	"images": {
		"src": "images/site",
		"dest": "dist/images"
	},

	"fonts": {
		"src": "fonts",
		"dest": "dist/fonts"
	},

	"symbols": {
		"src": "images/svg-symbols",
		"dest": "dist/images",
		"fileName": "_symbols.twig",
		"fileDest": "templates/wrapper",
		"json": "symbols.json",
		"docs": "tokens"
	},

	"sprites": {
		"src": "images/svg-sprites",
		"dest": "dist/images"
	},

	"svgs": {
		"src": "images/svg-assets",
		"dest": "dist/images"
	},

	"favicons": {
		"src": "favicons",
		"dest": "./"
	},

	"tokens": {
		"src": "tokens",
		"files": ["colors.json", "fonts.json", "breakpoints.json"],
		"dest": "scss/_config"
	},

	"critical": {
		"templates": "./src/public",
		"paths": [
			{ "url": "index.html", "template": "index.html" },
			{ "url": "a.html", "template": "a.html" },
			{ "url": "b.html", "template": "b.html" },
			{ "url": "c.html", "template": "c.html" }
		]
	},

	"backstop": {
		"browserSync": {
			"server": {
				"baseDir": "deploy/library",
				"index": "index.html"
			}
		}
	},

	"fractal": {
		"templates": "templates",
		"tmp": "./tmp/public",
		"library": "./deploy/library"
	},

	"publish": {
		"src": "./deploy/library",
		"dist": "./deploy/static",
		"html": [
			{ "input": "./deploy/library/components/preview/home.html" },
			{ "output": "./deploy/static/" },
			{ "name": "index" }
		]
	}
}
