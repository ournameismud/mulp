{
	"public": "./deploy/library",
	"browserSync": {
		"server": {
			"baseDir": "deploy/library",
			"index": "index.html"
		}
	},

	"critical": {
		"templates": "./deploy/library/components/preview",
		"urlBase": "./deploy/library",
		"outputBase": "./deploy/library/components/preview",
		"paths": [
			{
				"input": {
					"url": "components/preview/home.html",
					"source": "home.html"
				},
				"output": {
					"dist": "./"
				}
			},
			{
				"input": {
					"url": "components/preview/standard.html",
					"source": "standard.html"
				},
				"output": {
					"dist": "./"
				}
			},
			{
				"input": {
					"url": "components/preview/timeline.html",
					"source": "timeline.html"
				},
				"output": {
					"dist": "./"
				}
			}
		]
	}
}
